        </Border>

            <!-- CAMERAS -->
        <Border Grid.Row="1" Grid.Column="1" Margin="10" Padding="15"
     Background="#C8D2DC"
     BorderBrush="#9AA7B2"
     BorderThickness="1"
     CornerRadius="12">
            <StackPanel>

                <TextBlock Grid.Row="0" Text="Camera" Style="{StaticResource SectionTitleStyle}" />

            </StackPanel>
            </Border>

        </Grid>

</Window>

                </Grid>




     
        </Border>

            <!-- DATA RECORDER -->
        <Border Grid.Row="1" Grid.Column="0" Margin="10" Padding="15"
     Background="#C8D2DC"
     BorderBrush="#9AA7B2"
     BorderThickness="1"
     CornerRadius="12">
 

                <Grid Margin="10">

                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>


                    <TextBlock Grid.Row="0" Text="Data Recorder" Style="{StaticResource SectionTitleStyle}" />


                    <Grid Grid.Row="1">

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
